{
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@rooks/use-localstorage": "4.11.2",
    "@rooks/use-outside-click-ref": "4.11.2",
    "@rooks/use-window-size": "4.11.2",
    "camelcase-keys": "6.2.2",
    "firebase": "8.9.1",
    "firebaseui-ja": "1.0.0",
    "next": "10.2.3",
    "next-pwa": "5.2.24",
    "next-seo": "4.26.0",
    "nookies": "2.5.2",
    "react": "17.0.2",
    "react-bottom-scroll-listener": "5.0.0",
    "react-comic-viewer": "0.2.2",
    "react-dom": "17.0.2",
    "react-firebaseui": "4.1.0",
    "react-icons": "4.2.0",
    "react-no-ssr": "1.1.0",
    "react-share": "4.4.0",
    "ress": "3.0.0",
    "sass": "1.37.5",
    "sass-mq": "5.0.1",
    "use-pwa": "0.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/node": "14.18.12",
    "@types/react": "17.0.43",
    "@types/react-no-ssr": "1.1.3",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-sort-keys-shorthand": "2.1.0",
    "eslint-watch": "7.0.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.1",
    "stylelint": "13.13.1",
    "stylelint-config-css-modules": "2.3.0",
    "stylelint-config-recommended-scss": "4.3.0",
    "stylelint-config-sass-guidelines": "8.0.0",
    "stylelint-scss": "3.21.0",
    "typescript": "4.3.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:css-modules/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2020,
      "project": [
        "./tsconfig.json"
      ],
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "react",
      "@typescript-eslint",
      "import",
      "sort-keys-shorthand",
      "jsx-a11y",
      "css-modules"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "caseInsensitive": true,
            "order": "asc"
          }
        }
      ],
      "prettier/prettier": "error",
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": false,
          "ignoreCase": false,
          "noSortAlphabetically": false,
          "reservedFirst": false,
          "shorthandFirst": false,
          "shorthandLast": false
        }
      ],
      "sort-keys-shorthand/sort-keys-shorthand": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": true,
          "shorthand": "first"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      },
      "react": {
        "version": "detect"
      }
    }
  },
  "lint-staged": {
    "*.scss": "stylelint '**/*.scss'",
    "*.ts,*.tsx": "eslint . --ext .ts,.tsx "
  },
  "name": "twiv",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:style": "stylelint '**/*.scss' --fix",
    "lint:watch": "esw . --color --ext .ts,.tsx --fix --watch",
    "prepare": "husky install",
    "start": "next start",
    "test": "npm-run-all --parallel lint lint:style"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines",
      "stylelint-config-recommended-scss",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin",
            "each"
          ]
        }
      ],
      "block-closing-brace-empty-line-before": "never",
      "color-named": [
        "never",
        {
          "ignore": [
            "inside-function"
          ]
        }
      ],
      "declaration-empty-line-before": "never",
      "indentation": 2,
      "selector-class-pattern": null
    }
  },
  "version": "0.1.0"
}
